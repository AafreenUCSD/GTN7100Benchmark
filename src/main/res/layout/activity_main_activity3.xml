<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aafreensheikh.www.cse221.MainActivity3">

    <TextView android:text="File Operations" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cache Size"
        android:id="@+id/b1"
        android:onClick="getFileCacheSize"
        android:layout_above="@+id/b2"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_toRightOf="@+id/b1"
        android:layout_marginLeft="32dp"
        android:layout_alignRight="@+id/b2"
        android:layout_alignTop="@+id/b1"
        android:layout_above="@+id/b2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sequential read time"
        android:id="@+id/b2"
        android:onClick="getFileSequentialReadTime"
        android:layout_above="@+id/b3"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/b2"
        android:layout_above="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random read time"
        android:id="@+id/b3"
        android:onClick="getFileRandomReadTime"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="203dp"
        android:layout_alignLeft="@+id/b4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create file"
        android:id="@+id/b4"
        android:onClick="createFile"
        android:layout_above="@+id/b1"
        android:layout_toLeftOf="@+id/textView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/b3"
        android:layout_toLeftOf="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contention time"
        android:id="@+id/b5"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/b3"
        android:layout_marginTop="36dp"
        android:onClick="getTimeContention"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/textView8"
        android:layout_toRightOf="@+id/b3"
        android:layout_below="@+id/b5" />

</RelativeLayout>


